{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "msvc build",
        "type": "shell",
        "command": "cl.exe",
        "args": [
            // Compiler options
            "/EHsc",
            "/Zi",
            "/std:c++17",
            "/I", "${env:SDLPATH}/include",
            "/I", "${env:SDLIMAGEPATH}/include",
            "/I", "${env:SDLTTFPATH}/include",
            "/Fd:", "bin/",
            "/Fo:", "obj/",
            "/Fe:", "bin/RacingRobots.exe",
            // CPP files
            "main.cpp",
            "Game.cpp",
            "Graphic.cpp",
            "Robot.cpp",
            "Track.cpp",
            "Text.cpp",
            // SDL libs
            "SDL2.lib",
            "SDL2main.lib",
            // SDL_image libs
            "SDL2_image.lib",
            // SDL_ttf libs
            "SDL2_ttf.lib",
            // Linker options
            "/link",
            "/LIBPATH:${env:SDLPATH}/lib/x64",
            "/LIBPATH:${env:SDLIMAGEPATH}/lib/x64",
            "/LIBPATH:${env:SDLTTFPATH}/lib/x64",
            "/SUBSYSTEM:CONSOLE"
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "presentation": {
          "reveal": "always"
        },
        "problemMatcher": "$msCompile"
      }
    ]
  }